    <ImageButton
        android:id="@+id/request_back2"
        android:layout_width="79dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/background_light"
        app:srcCompat="@mipmap/ic_chevron_left_grey600_36dp"
        tools:layout_editor_absoluteY="4dp" />



    <EditText
        android:id="@+id/input_message"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:hint="搜索ID"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SearchView
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_message"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="316dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_below="@+id/button_identify_request"
        android:layout_toStartOf="@+id/input_message"
        app:srcCompat="@mipmap/ic_account_child_black_24dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="123dp" />



