    <EditText
        android:id="@+id/rec"

        android:layout_width="346dp"
        android:layout_height="345dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/imageButtonLeft1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:srcCompat="@mipmap/ic_chevron_left_grey600_36dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/recd"
        android:layout_width="181dp"
        android:layout_height="132dp"
        android:layout_alignTop="@+id/rec"
        android:layout_marginStart="-27dp"
        android:layout_toEndOf="@+id/button_identify_request"
        android:background="@drawable/shape2"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="137dp" />


    <TextView
        android:id="@+id/textview2"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/input_message"
        android:layout_alignTop="@+id/rec"
        android:layout_marginTop="-11dp"

        android:text="账号注册申请"
        android:textColor="#66CCFF"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/button_identify_request"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rec"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:textSize="23sp"
        android:text="信息审核"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/button_permission"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rec"
        android:layout_alignTop="@+id/button_identify_request"
        android:background="@android:color/transparent"
        android:textSize="23sp"
        android:text="权限设置"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="58dp" />


